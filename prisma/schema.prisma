datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  /// ID
  id           Int      @id @default(autoincrement())
  /// 名称
  name         String   @unique
  /// 作者
  author       String
  /// 描述
  desc         String?
  /// 出版时间
  firstEdition DateTime
  /// 库存
  stock        Int
  /// 价格 非整型
  price        Decimal
  /// 创建时间
  createdAt    DateTime @default(now())
}
